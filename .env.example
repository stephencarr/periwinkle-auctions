# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/periwinkle?schema=public

# NextAuth.js
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Square Payments (Sandbox)
SQUARE_APPLICATION_ID=sandbox-sq0idb-xxxx
SQUARE_ACCESS_TOKEN=your-sandbox-access-token
SQUARE_LOCATION_ID=your-location-id
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key
SQUARE_ENVIRONMENT=sandbox

# Public (exposed to browser)
NEXT_PUBLIC_SQUARE_APPLICATION_ID=sandbox-sq0idb-xxxx
NEXT_PUBLIC_SQUARE_LOCATION_ID=your-location-id
